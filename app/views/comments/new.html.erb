<%= form_with model: [@article, @comment] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>

  <%= f.label :body %>
  <%= f.text_area :body, size: "60x12" %>

  <%= f.hidden_field :article_id, value: @article.id %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token(form_options: { action: 'create', method: 'POST' }) %>
  <%= f.submit "Create" %>
<% end %>
